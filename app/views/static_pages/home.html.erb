<% provide :title, t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= link_to t :microfeed %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<h1><%=t :home %></h1>
<div class="center jumbotron" >
  <h1><%=t :wel %></h1>
  <h2>
    <%= t :thisis2 %>
    <%= link_to t("rort"), "https://www.railstutorial.org/" %>
    <%= t :samp %>
  </h2>

  <%= link_to t("sigup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
